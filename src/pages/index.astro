---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="nannaanker">
  <section class="flex flex-col md:flex-row justify-between items-center md:gap-5 xl:gap-0 md:mx-10 xl:mx-20 mb-10 mt-20">
    <!-- Tekst-sektion -->
    <div class="flex flex-col justify-between text-center md:text-left slide-in-left w-full md:w-1/2">
      <!-- Portfolio Title -->
      <p class="text-[4rem] sm:text-[6rem] md:text-[8rem] lg:text-[11rem] xl:text-[13rem] font-titel leading-none mb-5 md:mb-0">Portfolio</p>

      <!-- Tekst under billede -->
      <div class="flex flex-col md:mt-5 hidden md:block md:ml-2">
        <p class="text-lg sm:text-xl md:text-2xl xl:text-4xl font-elza font-medium">Nanna Anker Høeg</p>
        <p class="text-base sm:text-lg md:text-xl xl:text-2xl font-elza font-extralight">Multimediedesigner</p>
      </div>
    </div>

    <!-- Billede-sektion -->
    <div class="flex flex-col items-center md:justify-end slide-in-right">
      <!-- Billede -->
      <img src="/mig4.webp" alt="Billede af Nanna" class="w-[450px] xl:w-[600px] mb-3 md:mb-0" />

      <!-- Teksten under billede på mobil -->
      <div class="flex flex-row gap-3 md:hidden">
        <p class="text-xl sm:text-xl md:text-2xl xl:text-4xl font-elza font-medium">Nanna Anker Høeg</p>
        <p class="text-xl sm:text-lg md:text-xl xl:text-3xl font-elza font-extralight">Multimediedesigner</p>
      </div>
    </div>
  </section>

  <section class="bg-cover bg-no-repeat bg-[url('/ommigbaggrunddesk.jpg')] w-full py-32 mobilsmall:py-20 px-2 flex flex-col">
    <div class="flex justify-center">
      <img src="ommigblob.svg" alt="" />
    </div>
  </section>
</MainLayout>

<style>
  /* Slide-in animation */
  @keyframes slideInLeft {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideInRight {
    0% {
      transform: translateX(100%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Applied to text elements (coming from left) */
  .slide-in-left {
    animation: slideInLeft 1s ease-out forwards;
  }

  /* Applied to image element (coming from right) */
  .slide-in-right {
    animation: slideInRight 1s ease-out forwards;
  }
</style>
