---
const isKontaktPage = Astro.url.pathname.includes("/kontakt");

---

{
  isKontaktPage ? (
    <div class="w-full bg-gron text-center py-10">
      <p class="text-xs md:text-sm font-light text-white font-elza mt-2 md:mt-0">© 2025 Katja Anker</p>
    </div>
  ) : (
    <div class="w-full bg-gron flex flex-col md:flex-row md:justify-center px-5 lg:px-20 py-10 relative">
      <!-- Kontakt -->
      <div class="flex-1">
        <p class="text-center md:text-left text-lg mb-1 font-titel font-bold text-white" x-text="translations[lang].contact"></p>
        <div class="text-white font-elza text-sm leading-6 md:leading-6 text-center md:text-left">
          <a class="hover:underline underline md:no-underline hover:scale-105 transform" href="tel:22345765">
            +45 22 34 57 65
          </a>
          <br />
          <a class="hover:underline underline md:no-underline hover:scale-105 transform" href="mailto:katjaanker1@gmail.com">
            katjaanker1@gmail.com
          </a>
        </div>
      </div>

      <!-- Copyright til desktop -->
      <div class="flex-1 flex flex-col justify-center ">
        <p id="nanna" class="md:block hidden text-xs md:text-sm font-light text-white font-elza mt-2 md:mt-0 text-center">
          © 2025 Katja Anker
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex flex-row flex-1 justify-center mt-1 md:mt-0 md:justify-end">
        <div class="flex flex-col justify-center">
          <div class="flex">
        
           
          </div>
        </div>
      </div>

      <!-- Copyright til mobil -->
      <div class="w-full text-center md:hidden">
        <p id="nanna-mobile" class="text-xs font-light text-white font-elza mt-4">
          © 2025 Katja Anker
        </p>
      </div>
    </div>
  )
}

